<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/o">




    <ScrollView
        android:layout_marginBottom="20dp"
        android:id="@+id/scrollView4"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/o"
        app:layout_constraintBottom_toTopOf="@id/banner4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/costraint4"
        app:layout_constraintVertical_bias="0.0">

        <LinearLayout
            android:id="@+id/linearlayout4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="5dp">

            <TextView
                android:textColor="@color/black"
                android:id="@+id/story4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:fontFamily="@font/berkshire_swash"
                android:text="@string/Cold"
                android:textSize="20sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="@id/scrollView4"
                />

            <RadioGroup
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:id="@+id/radiogroup4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/shape_group">

                <RadioButton

                    android:id="@+id/radioButton4_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/Cold_food"
                    app:buttonTint="#102ED5"
                    android:fontFamily="@font/berkshire_swash"
                    android:textSize="20sp"

                    />

                <RadioButton
                    android:id="@+id/radioButton4_2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/Cold_wood"
                    app:buttonTint="#102ED5"
                    android:fontFamily="@font/berkshire_swash"
                    android:textSize="20sp"
                    android:background="@drawable/shape_radiobuttonss"
                    />

                <RadioButton
                    android:id="@+id/radioButton4_3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/Cold_kill"
                    app:buttonTint="#102ED5"
                    android:fontFamily="@font/berkshire_swash"
                    android:textSize="20sp"
                    android:background="@drawable/shape_radiobuttonss"
                    />

                <RadioButton
                    android:id="@+id/radioButton4_4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/Cold_new"
                    app:buttonTint="#102ED5"
                    android:fontFamily="@font/berkshire_swash"
                    android:textSize="20sp"
                    />
                <RadioButton
                    android:checked="true"
                    android:visibility="gone"
                    android:id="@+id/radioButton4_5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/up_wall"
                    app:buttonTint="#102ED5"
                    android:fontFamily="@font/berkshire_swash"
                    android:textSize="1sp"

                    />


            </RadioGroup>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/o"
                app:layout_constraintTop_toBottomOf="@id/radiogroup4">
                <Button
                    android:id="@+id/fake_4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/next"
                    android:text="@string/Next"
                    android:textColor="@color/white"
                    android:textColorHighlight="@color/white"
                    android:textColorHint="@color/white"
                    android:textColorLink="@color/white"
                    android:textSize="25sp"
                    app:backgroundTint="@color/next"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    />
                <Button
                    android:id="@+id/next4_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/next"
                    android:text="@string/Next"
                    android:textColor="@color/white"
                    android:textColorHighlight="@color/white"
                    android:textColorHint="@color/white"
                    android:textColorLink="@color/white"
                    android:textSize="25sp"
                    app:backgroundTint="@color/next"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>

                <Button
                    android:id="@+id/next4_2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/next"
                    android:text="@string/Next"
                    android:textColor="@color/white"
                    android:textColorHighlight="@color/white"
                    android:textColorHint="@color/white"
                    android:textColorLink="@color/white"
                    android:textSize="25sp"
                    app:backgroundTint="@color/next"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>

                <Button
                    android:id="@+id/next4_3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/next"
                    android:text="@string/Next"
                    android:textColor="@color/white"
                    android:textColorHighlight="@color/white"
                    android:textColorHint="@color/white"
                    android:textColorLink="@color/white"
                    android:textSize="25sp"
                    app:backgroundTint="@color/next"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>

                <Button
                    android:id="@+id/next4_4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/next"
                    android:text="@string/Next"
                    android:textColor="@color/white"
                    android:textColorHighlight="@color/white"
                    android:textColorHint="@color/white"
                    android:textColorLink="@color/white"
                    android:textSize="25sp"
                    app:backgroundTint="@color/next"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    />

            </androidx.constraintlayout.widget.ConstraintLayout>



        </LinearLayout>
    </ScrollView>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/costraint4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/button_heading4">


        <Button
            android:id="@+id/credit4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:text="@string/credit"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:textSize="15sp"
            app:backgroundTint="@android:color/transparent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/linear4_4" />

        <LinearLayout
            android:id="@+id/linear4_4"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/gold4"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                app:layout_constraintEnd_toStartOf="@id/amout_gold4"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/skrzynia_zlota" />

            <TextView
                android:id="@+id/amout_gold4"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear4_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginEnd="5dp"
            android:layout_marginRight="5dp"
            android:background="@color/o"
            android:orientation="vertical"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageButton
                android:visibility="gone"
                android:id="@+id/scrollid4"
                android:layout_marginTop="17dp"
                android:layout_width="100dp"
                android:layout_height="33dp"
                android:layout_gravity="center"
                android:background="@drawable/scroll"/>

            <ImageView
                android:id="@+id/scout4"
                android:layout_width="72dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:background="@color/o"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
            <Button
                android:id="@+id/button_scout4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/scoutprice"
                android:textAllCaps="false"
                android:textColor="@color/black"
                android:textSize="15sp"
                app:backgroundTint="@android:color/transparent"
                app:layout_constraintStart_toStartOf="parent" />

        </LinearLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:visibility="invisible"
        android:id="@+id/przegrales4"
        android:layout_marginTop="40dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/o"
        app:layout_constraintBottom_toTopOf="@id/banner4"
        app:layout_constraintTop_toBottomOf="@id/button_heading4">




        <ScrollView
            android:layout_marginBottom="20dp"
            android:id="@+id/scrollViewend4"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@color/o"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0">

            <LinearLayout
                android:id="@+id/linearlayoutend4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:padding="15dp"
                    android:textColor="@color/black"
                    android:id="@+id/you_lose4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:fontFamily="@font/berkshire_swash"
                    android:text="@string/you_lose4"
                    android:textSize="20sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="@id/powrot"
                    />



                <Button
                    android:id="@+id/powrot4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/next"
                    android:text="@string/Back"
                    android:textColor="@color/white"
                    android:textColorHighlight="@color/white"
                    android:textColorHint="@color/white"
                    android:textColorLink="@color/white"
                    android:textSize="25sp"
                    app:backgroundTint="@color/next"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>




            </LinearLayout>
        </ScrollView>









    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:visibility="invisible"
        android:id="@+id/wygrales4"
        android:layout_marginTop="40dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/o"
        app:layout_constraintBottom_toTopOf="@id/banner4"
        app:layout_constraintTop_toBottomOf="@id/button_heading4">

        <ScrollView
            android:layout_marginBottom="20dp"
            android:id="@+id/scrollViewwin4"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@color/o"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0">

            <LinearLayout
                android:id="@+id/linearlayoutwin4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:padding="15dp"
                    android:textColor="@color/black"
                    android:id="@+id/you_win4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:fontFamily="@font/berkshire_swash"
                    android:text="@string/good_dragon"
                    android:textSize="20sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="@id/powrot4"
                    />



                <Button
                    android:id="@+id/next4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/next"
                    android:text="@string/Next"
                    android:textColor="@color/white"
                    android:textColorHighlight="@color/white"
                    android:textColorHint="@color/white"
                    android:textColorLink="@color/white"
                    android:textSize="25sp"
                    app:backgroundTint="@color/next"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>




            </LinearLayout>
        </ScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:visibility="invisible"
        android:id="@+id/infoscroll4"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/o"
        android:layout_marginTop="40dp"
        app:layout_constraintBottom_toTopOf="@id/banner4"
        app:layout_constraintTop_toBottomOf="@id/button_heading4">




        <ScrollView
            android:layout_marginBottom="20dp"
            android:id="@+id/scrollViewscroll4"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@color/o"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0">

            <LinearLayout
                android:id="@+id/linearlayoutscroll4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <TextView
                    android:padding="15dp"
                    android:textColor="@color/black"
                    android:id="@+id/scrolltext4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:fontFamily="@font/berkshire_swash"
                    android:text="@string/scout_Cold"
                    android:textSize="20sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="@id/backscroll4"
                    />

                <Button
                    android:id="@+id/backscroll4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/next"
                    android:text="@string/Back"
                    android:textColor="@color/white"
                    android:textColorHighlight="@color/white"
                    android:textColorHint="@color/white"
                    android:textColorLink="@color/white"
                    android:textSize="25sp"
                    app:backgroundTint="@color/next"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>




            </LinearLayout>
        </ScrollView>









    </androidx.constraintlayout.widget.ConstraintLayout>
    <Button
        android:id="@+id/button_heading4"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/heading"
        android:foreground="@color/heading"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <com.google.android.gms.ads.AdView
        app:backgroundTint="@color/heading"
        android:background="@color/heading"
        android:id="@+id/banner4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:adSize="BANNER"
        app:adUnitId="ca-app-pub-1287137257492728/7907849682"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>